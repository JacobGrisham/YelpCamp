<%- include ("partials/header") %>
<div class="container">
	<div class="row">
			<div class="login-container signup-login">
				
				<form class="form-signin needs-validation" novalidate action="/register" method="POST">
					
					<h1 class="text-center title-font">Sign Up!</h1>
					
					<div class="form-label-group">
						<input id="inputUsername" class="form-control" type="text" name="username" placeholder="Happy Camper" required autofocus>
						<label for="inputUsername">Username</label>
						<div class="valid-feedback"></div>
						<div class="invalid-feedback">
							Please provide username.
						</div>
					</div>
					
					<div class="form-label-group">
						<input id="inputPassword" class="form-control" type="password" name="password" placeholder="Super secret..." required></input>
						<label for="inputPassword">Password</label>
						<div class="valid-feedback"></div>
						<div class="invalid-feedback">
							Please provide password.
						</div>
					</div>
				
					<div class="form-label-group">
						<input id="inputEmail" class="form-control" type="email" name="email" placeholder="(optional) happycamper@gmail.com">
						<label for="inputEmail">Email</label>
					</div>
				
					<div class="form-label-group">
						<label for="adminCode">Admin Code</label>
						<input class="form-control" type="text" name="adminCode" placeholder="Enter only if you have it"></input>
					</div>
		
					<div class="form-label-group">
						<button type="submit" class="btn btn-lg btn-block btn-success" style="width:100%">Register</button>
					</div>
		
					<p class="d-flex justify-content-between"><a href="/" class="mr-4 btn btn-success"><i class="fa fa-angle-left back text-white" aria-hidden="true"></i> Back</a><a href="/login" class="btn btn-success">Login</a></p>
				</form>
			</div>
	</div>

</div>
<%- include ("partials/footer") %>