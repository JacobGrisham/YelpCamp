<%- include ("../partials/default-main") %>
<%- include ("../partials/nav") %>

<div class="container">
	<div class="row justify-content-center">
			<div class="col-12 col-md-9">
				
				<form class="new-edit-forms dark-brown needs-validation" novalidate action="/campgrounds/<%= campground._id %>/comments" method="POST">
					<!-- Note that the action="__" should equal the name of the post request url. -->
					
					<h2 class="text-center title-font">Add Comment to <%= campground.name %> </h2>
					
					<div class="form-group">
						<input class="form-control" type="textarea" name="comment[text]" placeholder="Share your thoughts!" required autofocus></input>
						<div class="valid-feedback"></div>
						<div class="invalid-feedback">
							Did you forget to write something?
						</div>
					</div>
					
					<div class="form-group mt-2">
						<button class="btn btn-lg light-brown text-white btn-block w-100">Comment!</button>
					</div>
				
					<a href="/campgrounds" class="mr-4 btn btn-sm light-brown text-white mt-4"><i class="fa fa-angle-left add" aria-hidden="true"></i> Back</a>
					
				</form>
			</div>
	</div>

</div>

<%- include ("../partials/footer") %>