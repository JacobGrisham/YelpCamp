<!-- NAVBAR -->
<nav class="navbar sticky-top navbar-expand-md mb-4 p-3" id="navbar">
  <div class="container-fluid">
    <div class="wood-btn wiggle">
      <img class="wood-arrow flip-horizontally" src="/images/button-arrow.svg" alt="wooden sign post as button">
      <a class="nav-link link-light logo wood-sign text-white" style="margin-left: 1rem" href="/">YelpCamp</a>	
    </div>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <img class="camp" src="/favicon/android-chrome-192x192.png" alt="camp">
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav w-100">
        <li class="nav-item">
          <div class="mx-4 btn" id="btn-toggle">
            <i class="fa fa-moon-o night-color" aria-hidden="true"></i><span class="night-color">Night</span>
            <span class="day-color">Day</span><i class="fa fa-sun-o day-color" aria-hidden="true"></i>
          </div>
        </li>
        <% if(!currentUser){ %>
        <li class="nav-item point">
          <div class="wood-btn mx-4">
            <img class="wood-arrow flip-horizontally" src="/images/button-arrow.svg" alt="wooden sign post as button">
            <a class="nav-link link-light px-4 py-2 title-font" href="/login">Login</a>	
          </div>
        </li>
        <li class="nav-item point">
          <div class="wood-btn mx-4">
            <img class="wood-arrow" src="/images/button-arrow.svg" alt="wooden sign post as button">
            <a class="nav-link link-light px-4 py-2 title-font" href="/register">Register</a>
          </div>
        </li>
        <% } else { %>
        <li class="nav-item">
          <div class="wood-btn mx-4">
            <img class="wood-arrow flip-horizontally" src="/images/button-arrow.svg" alt="wooden sign post as button">
            <a class="nav-link link-light px-4 py-2 title-font"><i class="fa fa-user add" aria-hidden="true"></i> <%= currentUser.username %></a>
          </div>
        </li>
        <li class="nav-item point">
          <div class="wood-btn mx-4">
            <img class="wood-arrow" src="/images/button-arrow.svg" alt="wooden sign post as button">
            <a class="nav-link link-light px-4 py-2 title-font" href="/logout">Logout</a>
          </div>
        </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
<!-- FLASH MESSAGES -->
<div class="container">
  <% if(error && error.length > 0){ %> <!-- error.length > 0 checks to see if there is anything in the array. An empty array will still display something. We watnt to prevent that -->
    <!--message functionality comes from flash in app.js -->
    <div class="alert alert-danger" role="alert"><%= error %></div>
  <% } %>
  <% if(success && success.length > 0){ %>
    <div class="alert alert-success" role="alert"><%= success %></div>
  <% } %>
</div>
