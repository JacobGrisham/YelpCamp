<%- include ("partials/header") %>
<div class="container">
	<div class="row">
			<div class="col-9 col-md-6 col-lg-5 signup-login">
				<h1 class="text-center title-font">Welcome Back</h1>
				<form action="/login" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="username" placeholder="username">
					</div>
					<div class="form-group">
						<input class="form-control" type="password" name="password" placeholder="password"></input>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-lg btn-block btn-success">Login</button>
					</div>
				</form>
				<p><i class="fa fa-angle-left back" aria-hidden="true"></i><a href="/" class="mr-4"> Back</a><a href="/register">Sign Up</a></p>
			</div>
	</div>

</div>
