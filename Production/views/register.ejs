<%- include ("partials/header") %>
<div class="container">
	<div class="row">
			<div class="col-9 col-md-6 col-lg-5 signup-login">
				<h1 class="text-center">Sign Up!</h1>
				<form action="/register" method="POST">
					<div class="form-group">
						<label for="avatar">Avatar URL</label>
						<input class="form-control" id="avatar" type="text" name="avatar" placeholder="Please, no NSFW">
					</div>
					<div class="form-group">
						<label for="username">Username</label>
						<input class="form-control" id="username" type="text" name="username" placeholder="Please, no NSFW" required>
					</div>
					<div class="form-group">
						<label for="password">Password</label>
						<input class="form-control" type="password" name="password" placeholder="Super secret..." required></input>
					</div>
					<div class="form-group">
						<label for="firstName">First Name</label>
						<input class="form-control" id="firstName" type="text" name="firstName" placeholder="Happy">
					</div>
					<div class="form-group">
						<label for="lastName">Last Name</label>
						<input class="form-control" id="lastName" type="text" name="lastName" placeholder="Camper">
					</div>
					<div class="form-group">
						<label for="email">Email</label>
						<input class="form-control" id="email" type="email" name="email" placeholder="happycamper@gmail.com">
					</div>
					<div class="form-group">
						<label for="adminCode">Admin Code</label>
						<input class="form-control" type="text" name="adminCode" placeholder="Enter only if you have it"></input>
					</div>
					<div class="form-group">
						<button class="btn btn-lg btn-block btn-success">Submit</button>
					</div>
				</form>
				<i class="fa fa-angle-left back" aria-hidden="true"></i><a href="/"> Back</a>
			</div>
	</div>

</div>
<%- include ("partials/footer") %>