<% include partials/header%>
<div class="container">
	<div class="row">
		<h1 style="text-align:center;"> Create a New Campground </h1>
	</div>
	<div class="row">
			<div style="width:30%; margin: 25px auto;">
				<form action="/campgrounds" method="POST">
					<div class="form-group">
						<input class="form-control" type="text" name="name" placeholder="Campground Name">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="image" placeholder="Image URL">
					</div>
					<div class="form-group">
						<input class="form-control" type="text" name="description" placeholder="Share your experience">
					</div>
						<button class="btn btn-light btn-lg btn-block"> Submit </button>
					<div class="form-group">
						<a href="/campgrounds">All Campgrounds</a>
					</div>
				</form>
			</div>
	</div>
</div>

<% include partials/footer %>