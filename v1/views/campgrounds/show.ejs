<%- include ("../partials/header") %>
<div class="container">
	<div class="row" id="campground-container">
		<div class="col-md-3">
			<p class="lead">Action Buttons</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="card p-3 mb-4">
				<img src="<%= campground.image %> " class="img-fluid">
				<div>
					<h4 class="text-right">$<%= campground.price %>/night</h4>
					<h4><a><%= campground.name %></a></h4>
					<p><%= campground.description %></p>
					<p><em>Submitted by </em><%= campground.author.username %></p>
					<% if(currentUser && campground.author.id.equals(currentUser._id)){ %>
						<a href="/campgrounds/<%= campground._id %>/edit" class="btn btn-outline-warning">Edit</a>
						<form action="/campgrounds/<%= campground._id %>?_method=DELETE" method="POST">
							<button class="btn btn-danger" id="delete-form">Delete</button>
						</form>
					<% } %>
				</div>
			</div>
		</div>
	</div>
		<div class="row">
			<div class="col-md-12 d-flex justify-content-end">
				<div class="card w-75 bg-light p-3">
					<div class="text-right">
						<a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add a Comment</a>
					</div>
					<hr>
				<% campground.comments.forEach(function(comment){ %>
					<div class="row">
						<div class="col-md-12">
							<strong><%= comment.author.username %></strong>
							<span class="text-right">10 days ago</span>
							<p><%= comment.text %></p>
							<% if(currentUser && comment.author.id.equals(currentUser._id)){ %>
								<a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-xs btn-warning">Edit</a>
								<form action="/campgrounds/<%=campground._id %>/comments/<%=comment._id%>?_method=DELETE" method="POST">
									<button class="btn btn-xs btn-danger" class="delete-button">Delete</button>
								</form>
							<% } %>
						</div>
					</div>
				</div>
				<% }) %>
			</div>
		</div>
</div>

<%- include ("../partials/footer") %>